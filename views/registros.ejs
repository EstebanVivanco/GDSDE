    <br>

    <div id="margintable" >
        <table class="table table-striped text-center mt-4 ">
            <thead id="titletable">
                <tr>
                    <th>ID SOLICITUD</th>
                    <th>ALUMNO</th>
                    <th>RUT ALUMNO</th>
                    <th>CORREO ALUMNO</th>
                    <th>NUMERO DE SALA</th>
                    <th>CODIGO DE SOLICITUD</th>
                    <th>FECHA DE SOLICITUD</th>
                    <th>HORA DE INICIO</th>
                    <th>HORA DE SALIDA</th>
                </tr>
            </thead>
            <tbody>
                <% results.forEach((solicitud) => { %>
                <tr>
                    <td> <%= solicitud.solicitud_id %> </td>
                    <td> <%= solicitud.nombre %> </td>
                    <td> <%= solicitud.rut %> </td>
                    <td> <%= solicitud.correo %> </td>
                    <td> <%= solicitud.numero_sala %> </td>
                    <td > <%= solicitud.codigo_solicitud %> </td>
                    <td> <%= solicitud.fechasoli %> </td>
                    <td> <%= solicitud.hora_inicio %> </td>
                    <td> <%= solicitud.hora_final %> </td>
                </tr>
                <% }) %>
                <!-- Agrega más filas según tus necesidades -->
            </tbody>
        </table>
    </div>


