<div class="container mt-4">
    <div class="card border-secondary">
        <div class="card-header" id="titlecard">CREAR NUEVA SALAS</div>
        <div class="card-body">
            <form action="/createsalas" method="POST">
                <div class="row">
            
                    <div class="col-md-6 col-sm-12 mt-3">
                        <label for="exampleFormControlInput1" class="form-label">Número de la sala: </label>
                        <input class="form-control form-control-lg" type="text" placeholder="Ej: 4" aria-label="default input example" id="numero" name="numero" required>
                    </div>
    
                    <div class="col-md-6 col-sm-12 mt-3">
                        <label for="exampleFormControlInput1" class="form-label">Capacidad: </label>
                        <input class="form-control form-control-lg" type="text" placeholder="Ej: 4 personas" aria-label="default input example" id="capacidad" name="capacidad" required>
                    </div>
    
                    <div class="col-md-6 col-sm-12 mt-3">
                        <label for="exampleFormControlInput1" class="form-label">Estado de la Sala: </label>
                        <select class="form-select form-control-lg" aria-label="Default select example" id="estado" name="estado" onchange="showDiv('hidden_div', this)" required>
                            
                            <option selected> Seleccione una opción: </option>
                            <% results.forEach((tipos)=>{ %>
                                <option value="<%= tipos.estado_sala_id %>" > <%= tipos.estado %> </option>
                            <%})%>
                        </select>
                    </div>

                    <div class="col-md-6 col-sm-12 mt-3">
                        <label for="exampleFormControlInput1" class="form-label">Asignar Cámara a la Sala: </label>
                        <select class="form-select form-control-lg" aria-label="Default select example" id="selectCam" name="selectCam" required>
                            <option value="" disabled selected> Seleccione una Cámara</option>
                        </select>
                    </div>

                    <% results2.forEach((codelin) => { %>
                            <input value="<%= codelin.camcode %>" id="codelin" name="codelin" hidden>
                    <% }) %>

                    <div class="">
                        <button type="submit" class="btn mt-3 w-100" id="submit-btn">Crear Salas</button>
                    </div>
            </div>
        </div>
    </div>
</div>

