    <div class="container-fluid">

            <a href="/ingresarTipoUsuario" class="btn" id="submit-btn">Añadir un nuevo tipo de usuario</a>
            <a href="/tipoUserDeshabilitado" class="btn" id="submit-btn">Tipo de usuarios deshabilitados</a>

        <table class="table table-striped text-center mt-4">
            <thead id="titletable">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>

            <tbody>
                <% results.forEach((tipo)=>{ %>

                    <tr>
                        <td>
                            <%= tipo.tipo_id %>
                        </td>
                        <td>
                            <%= tipo.nombre %>
                        </td>
                        <td>
                            <a href="/editusertype/<%= tipo.tipo_id %>" class="btn" id="submit-btn">editar</a>
                            <a href="/deleteUserType/<%= tipo.tipo_id %>" class="btn btn-danger">eliminar</a>
                        </td>

                    </tr>
                    <% }) %>
            </tbody>

        </table>
