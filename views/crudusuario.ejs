    </nav>
    <!-- FIN NAV-->

    <br><br>

    <DIV>
        <div class="text-c">
            <H1>LISTA DE USUARIOS</H1>
        </div>
    </DIV>

    <!--Inicio lista de tipos de usuario-->



    <div class="container-fluid">

        <a href="/crearNuevoUsuario" class="btn" id="submit-btn">Crear nuevo usuario</a>
        <a href="/usuarioDeshabilitado" class="btn" id="submit-btn">Habilitar usuario</a>
        <table class="table table-striped text-center mt-4 ">
            <thead id="titletable">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Rut</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Correo</th>
                    <th scope="col">Tipo</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>

            <tbody>
                <% results.forEach((user)=>{ %>

                    <tr>
                        <td>
                            <%= user.usuario_id %>
                        </td>
                        <td>
                            <%= user.rut %>
                        </td>
                        <td>
                            <%= user.nombre %>
                        </td>
                        <td>
                            <%= user.correo %>
                        </td>
                        <td>
                            <%= user.tiponombre %>
                        </td>

                        <td>
                            <a href="/editarUsuarios/<%= user.usuario_id %>" class="btn" id="submit-btn"><span class="material-symbols-outlined">edit_square</span></a>
                            <a onclick="confirmar(<%= user.usuario_id %>)" class="btn btn-danger"><span class="material-symbols-outlined">delete</span></a>
                        </td>


                    </tr>
                    <% }) %>
            </tbody>

        </table>
    </div>
    <br>

    <footer class="text-center text-white" id="submit-btn" style="bottom: 0; width: 100%; margin-top: auto;">
        <div class="container p-2 pb-0">
            <div class="row">
                <div class="col-lg-6">
                    <h5>Dirección de la empresa</h5>
                    <p> Picarquin, Pasaje 1 - #1388 </p>
                </div>

                <div class="col-lg-6">
                    <h5>Correo electrónico</h5>
                    <p>gestor.salas@empresa.com </p>
                </div>

            </div>
        </div>
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            © 2023 Copyright: Gestor de salas, derechos reservados
        </div>
    </footer>

    <!--cdn bootstrap js-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <!--cdn alertas js-->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.5/dist/sweetalert2.all.min.js"></script>

    <!--CDN de la datatables-->
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#table').DataTable({

            });

        });


        function confirmar(id) {
            Swal.fire({
                title: 'Atencion!',
                text: "Estas seguro de querer eliminar el usuario " + id + "?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                cancelButtonText: 'Cancelar',
                confirmButtonText: 'Si, eliminar!'
            }).then((result) => {

                if (result.isConfirmed) {
                    window.location = '/deshabilitarUsuario/' + id;

                }

            })
        }

    </script>
</body>

</html>