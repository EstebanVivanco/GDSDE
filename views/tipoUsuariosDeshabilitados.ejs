<br><br>

<DIV>
    <div class="text-c">
        <H1>LISTA DE TIPOS DE USUARIOS DESHABILITADOS</H1>
    </div>
</DIV>

    <!--Inicio lista de tipos de usuario-->
    <br>
    
    <div class="container-fluid">  
        <a href="/crudtipo" class="btn" id="submit-btn">Volver</a>
        <table class="table table-striped text-center mt-4">

            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>

            <tbody>
                <% results.forEach((tipo)=>{ %>

                    <tr>
                        <td>
                            <%= tipo.tipo_id %>
                        </td>
                        <td>
                            <%= tipo.nombre %>
                        </td>
                        <td>
                            <a href="/habilitar/<%= tipo.tipo_id %>" class="btn btn-success">Habilitar</a>
                        </td>
                    </tr>

                <% }) %>
            </tbody>

        </table>
    </div>

        
    <div class="containter-fluid p-5 pb-2" style="background-color: #3a4cd5; color: white; padding: 20px;bottom: 0; position: fixed; width: 100%;" >
        <div class="row">

            <div class="col-lg-3">
                <h3>Nuestro Nombre</h3>
                <p> Yuntas Asociados </p>
            </div>

            <div class="col-lg-3">
                <h3>Dirección de la empresa</h3>
                <p> Picarquin, Pasaje 1 - #1388 </p>
            </div>

            <div class="col-lg-3">
                <h3>Correo electrónico</h3>
                <p>info@empresa.com</p>
            </div>

            <div class="col-lg-3">
                <h3>Teléfono</h3>
                <p>+1 123-456-7890</p>
            </div>
            

        </div>
    </div>


</body>

